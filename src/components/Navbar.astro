<section>
  <header>
    <div>
      <h3>PTV Newsletter</h3>
      <p class="date-time"><span id="datetime"></span></p>
    </div>
    <nav>
      <a href="#Events">Events</a>
      <a href="#Reminders">Reminders</a>
      <a href="#Contact">Contact</a>
    </nav>
  </header>
</section>

<style>
  section {
    background-color: white;
    box-shadow: 5px 5px 5px 1px rgba(117,117,117,0.75);
    -webkit-box-shadow: 5px 5px 5px 1px rgba(117,117,117,0.75);
    -moz-box-shadow: 5px 5px 5px 1px rgba(117,117,117,0.75);
  }

  header {
    display: flex;
    justify-content: space-between;
    padding: 15px;

    h3 {
      font-size: 40px;
      margin-bottom: 0;
    }
  }

  .date-time {
    font-size: 14px;
    color: gray;
    margin: 0;
    text-align: left;
  }

  nav {
    display: flex;
    width: 400px;
    justify-content: space-between;
    align-items: flex-end;
    font-size: 24px;

    a {
      margin-bottom: 0;
      text-decoration: none;
      color: inherit;
      cursor: pointer;
    }
  }

  @media (max-width: 768px) {
    header {
      flex-direction: column;
      text-align: center;
    }

    nav {
      width: auto;
      flex-direction: column;
      gap: 10px;
    }
  }

</style>

<script>
  function updateDateTime() {
    const now = new Date();
    const dateStr = now.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
    const timeStr = now.toLocaleTimeString('en-US');
    const el = document.getElementById('datetime');
    if (el) {
      el.innerHTML = dateStr + ' ' + timeStr;
    }
  }

  updateDateTime();
  setInterval(updateDateTime, 1000);
</script>